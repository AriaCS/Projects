# In this SQL code, I created a table for an Independent Pharmacy Store with top selling over-the-counter medications. 

#Create a table for your store.
CREATE TABLE otc_medications
   (id INTEGER PRIMARY KEY,
   name TEXT,
   description TEXT,
   category TEXT,
   price INTEGER,
   stock_count INTEGER);

#Insert values for you store.
INSERT INTO otc_medications (id, name, description, category, price, stock_count) 
VALUES 
   (1, 'Advil', 'Relieves pain, reduces fever, and anti-inflammatory', 'Pain relief', 13, 100),
   (2, 'Tylenol', 'Reduces pain and fever', 'Pain relief', 11, 150),
   (3, 'Aleve', 'Relieves pain and reduces inflammation', 'Pain relief', 12, 200),
   (4, 'Zyrtec', 'Relieves allergy symptoms', 'Allergy relief', 16, 75),
   (5, 'Claritin', 'Relieves allergy symptoms', 'Allergy relief', 19, 50),
   (6, 'Benadryl', 'Relieves allergy symptoms and hives', 'Allergy relief', 10, 100),
   (7, 'Pepto-Bismol', 'Relieves upset stomach and diarrhea', 'Digestive health', 9, 200),
   (8, 'Imodium', 'Relieves diarrhea', 'Digestive health', 11, 25),
   (9, 'Tums', 'Relieves heartburn and acid indigestion', 'Digestive health', 8, 100),
   (10, 'MiraLAX', 'Relieves constipation', 'Digestive health', 13, 150),
   (11, 'Sudafed', 'Relieves nasal congestion', 'Cold and flu relief', 10, 125),
   (12, 'NyQuil', 'Relieves cold and flu symptoms', 'Cold and flu relief', 13, 175),
   (13, 'DayQuil', 'Relieves cold and flu symptoms', 'Cold and flu relief', 13, 250),
